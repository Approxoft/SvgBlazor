<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <SolutionDir Condition="'$(SolutionDir)' == ''">$(MSBuildThisFileDirectory)../../</SolutionDir>
  </PropertyGroup>

  <PropertyGroup>
    <BinDocsCompiler>$(SolutionDir)src/SvgBlazor.Docs.Generator/bin/$(Configuration)/net5.0/SvgBlazor.Docs.Generator.dll</BinDocsCompiler>
    <XmlDocumentation>$(SolutionDir)src/SvgBlazor/obj/$(Configuration)/net5.0/SvgBlazor.xml</XmlDocumentation>
    <ReadmeMd>$(SolutionDir)README.md</ReadmeMd>
  </PropertyGroup>
	
  <Target Name="GenerateDocs" BeforeTargets="BeforeBuild">
    <Message Text="Generating docs..." Importance="high" />
    <Exec Command="dotnet &quot;$(BinDocsCompiler)&quot; $(SolutionDir)" />
	<ItemGroup>
	  <EmbeddedResource Include="Pages\**\*.html" Exclude="@(EmbeddedResource)" />
	  <EmbeddedResource Include="$(XmlDocumentation)" />
	</ItemGroup>
  </Target>

  <Target Name="CleanGeneratedDocsFiles" BeforeTargets="Clean">
    <ItemGroup>
      <FilesToClean Include="./Pages/**/*.html" />
    </ItemGroup>
    <Delete Files="@(FilesToClean)" />
  </Target>

  <ItemGroup>
    <EmbeddedResource Include="$(ReadmeMd)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.9" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.9" PrivateAssets="all" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
    <PackageReference Include="Markdig.Signed" Version="0.26.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SvgBlazor\SvgBlazor.csproj">
      <GlobalPropertiesToRemove></GlobalPropertiesToRemove>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
    <None Remove="Markdig.Signed" />
  </ItemGroup>
</Project>
