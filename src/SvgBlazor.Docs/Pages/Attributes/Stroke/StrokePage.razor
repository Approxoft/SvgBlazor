<div><ExampleComponent ExampleCode="@(new StrokeLineJoinMiterExample())" /></div>

<h6>Round</h6>
<div><ExampleComponent ExampleCode="@(new StrokeLineJoinRoundExample())" /></div>

<h6>Bevel</h6>
<div><ExampleComponent ExampleCode="@(new StrokeLineJoinBevelExample())" /></div>

<h6>Miter clip</h6>
<div><ExampleComponent ExampleCode="@(new StrokeLineJoinMiterClipExample())" /></div>

