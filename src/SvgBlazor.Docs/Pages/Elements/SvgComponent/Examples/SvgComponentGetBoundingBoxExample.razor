@using System.Drawing

<SvgComponent @ref="svg" Width="100" Height="100" />
<button @onclick="OnButtonClickedCalculateBoundingBox">Calculate the bounding box</button>

@if (!boundingBox.IsEmpty)
{
    <p>Boudning box: @boundingBox</p>
}

@code
{
    @*#example-code-start*@
    private RectangleF boundingBox;

    private SvgComponent svg;
    private SvgCircle circle;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            circle = new SvgCircle
            {
                CenterX = 50,
                CenterY = 50,
                Radius = 25,
            };

            svg.Add(circle);
        }
    }

    private async Task OnButtonClickedCalculateBoundingBox()
    {
        boundingBox = await svg.GetBoundingBox(circle);
    }

    @*#example-code-end*@
}