@namespace SvgBlazor.Docs.Examples

<SvgComponent @ref="svg" Width="200" Height="200" />

@code {
    SvgComponent svg;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            var circle = new SvgCircle()
            {
                CenterX = 100,
                CenterY = 100,
                Radius = 20
            };
            svg.Add(circle);
        }
    }
}