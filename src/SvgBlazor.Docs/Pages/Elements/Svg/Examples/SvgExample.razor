<SvgComponent @ref="svgref" Width="400" Height="400"/>

@code {
    SvgComponent svgref;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            var svg1 = new Svg
            {
                X = 0,
                Y = 0,
                Width = 400,
                Height = 400,
                Fill = new SvgFill { Color = "red" },
            };

            svg1.Add(new SvgCircle { CenterX = 200, CenterY = 200, Radius = 100, });

            svgref.Add(svg1);

            var svg2 = new Svg
            {
                X = 0,
                Y = 0,
                Width = 400,
                Height = 400,
                Fill = new SvgFill { Color = "blue" },
            };

            svg2.Add(new SvgRect { X = 50, Y = 50, Width = 100, Height = 100, });

            svgref.Add(svg2);
        }
    }
}

